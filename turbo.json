{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["DMNO_PARENT_SERVER"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"],
      "passThroughEnv": ["APP_ENV", "CLERK_SECRET_KEY"]
    },
    "api#build": {
      "dependsOn": ["^@repo/ts-rest#build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "@repo/ts-rest#build": {
      "dependsOn": ["^@repo/db#build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "@repo/db#build": {
      "dependsOn": ["@repo/db#schema:gen"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "@repo/db#schema:gen": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["schema.prisma"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "env:docker": {
      "dependsOn": ["^env:docker"],
      "inputs": ["$TURBO_DEFAULT$"],
      "passThroughEnv": ["APP_ENV"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$"],
      "cache": false,
      "persistent": true
    }
  }
}
