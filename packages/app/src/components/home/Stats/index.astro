---
import { Heart, Hospital, User } from 'lucide-react'
---

<section
  id="stats"
  class="bg-white py-20"
>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <div class="rounded-xl bg-red-50 p-6 text-center">
        <Heart className="mb-4 text-3xl text-red-600" />
        <h3 class="mb-2 text-4xl font-bold text-gray-900">15,000+</h3>
        <p class="text-gray-600">Lives Saved</p>
      </div>

      <div class="rounded-xl bg-red-50 p-6 text-center">
        <User className="mb-4 text-3xl text-red-600" />
        <h3 class="mb-2 text-4xl font-bold text-gray-900">50,000+</h3>
        <p class="text-gray-600">Registered Donors</p>
      </div>

      <div class="rounded-xl bg-red-50 p-6 text-center">
        <Hospital className="mb-4 text-3xl text-red-600" />
        <h3 class="mb-2 text-4xl font-bold text-gray-900">200+</h3>
        <p class="text-gray-600">Partner Hospitals</p>
      </div>
    </div>
  </div>
</section>
