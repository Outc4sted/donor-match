---
export interface Props {
  siteName: string
}

const { siteName } = Astro.props
---

<footer
  id="footer"
  class="bg-gray-900 py-12 text-white"
>
  <div class="container mx-auto flex flex-col justify-center px-4 md:flex-row">
    <div class="mt-6 flex flex-col gap-8 text-center md:mt-0">
      <p class="mt-2 text-sm text-gray-400">
        &copy; {new Date().getFullYear()}
        {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>
