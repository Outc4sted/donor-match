---
import { Search } from 'lucide-react'
---

<section
  id="organ-list-header"
  class="bg-gradient-to-br from-red-50 to-white pb-10 pt-32"
>
  <div class="container mx-auto px-4">
    <div class="mb-8 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900">
        Available Organs for Transplant
      </h1>
      <div class="flex space-x-4">
        <div class="relative">
          <input
            type="text"
            placeholder="Search organs..."
            class="rounded-lg border py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-red-600"
          />
          <Search className="absolute left-3 top-3 text-gray-400" />
        </div>

        <select
          class="rounded-lg border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-600"
        >
          <option>All Blood Types</option>
          <option>A+</option>
          <option>B+</option>
          <option>AB+</option>
          <option>O+</option>
          <option>A-</option>
          <option>B-</option>
          <option>AB-</option>
          <option>O-</option>
        </select>
      </div>
    </div>
  </div>
</section>
