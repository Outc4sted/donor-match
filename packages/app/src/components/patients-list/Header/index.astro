---
import { Search } from 'lucide-react'
---

<section
  id="patient-list-header"
  class="bg-gradient-to-br from-red-50 to-white pb-10 pt-32"
>
  <div class="container mx-auto px-4">
    <div class="mb-8 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900">Patient List</h1>

      <div class="flex space-x-4">
        <div class="relative">
          <input
            type="text"
            placeholder="Search patients..."
            class="rounded-lg border py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-red-600"
          />

          <Search className="absolute left-3 top-3 text-gray-400" />
        </div>
      </div>
    </div>
  </div>
</section>
