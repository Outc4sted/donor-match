---
import Header from '@/components/shared/Header/index.astro'
import Footer from '@/components/shared/Footer/index.astro'
import { ClientRouter } from 'astro:transitions'

import '@/styles/global.css'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
    <ClientRouter />
  </head>

  <body class="flex min-h-screen flex-col">
    <Header siteName={title} />

    <main class="flex-1 bg-white p-4">
      <slot />
    </main>

    <Footer siteName={title} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
