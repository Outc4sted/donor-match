---
export interface Props {
  title: string
  subtitle?: string
  imageSrc?: string
  imageAlt?: string
}

const { title, subtitle, imageSrc, imageAlt } = Astro.props
---

<section
  id="dashboard-page-layout"
  class="mb-8 bg-gradient-to-br from-red-100 to-white pb-10 pt-32"
>
  <div class="container mx-auto flex items-center justify-between px-4">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-700">
        {title}
      </h1>

      {subtitle && <h2 class="text-xl font-bold text-gray-500">{subtitle}</h2>}
    </div>

    {
      imageSrc && (
        <div class="pointer-events-none flex justify-center md:w-1/2">
          <img
            class="h-auto w-2/5 rounded-xl opacity-90"
            src={imageSrc}
            alt={imageAlt}
          />
        </div>
      )
    }
  </div>
</section>

<slot />
