---
import { CircleCheckBig, ClockAlert, ListOrdered } from 'lucide-react'
---

<div
  id="status-card"
  class="mb-8 rounded-xl bg-white p-6 shadow-sm"
>
  <h3 class="mb-4 text-xl font-semibold">Current Status</h3>

  <div class="flex flex-wrap gap-6">
    <div class="flex-1 rounded-lg bg-green-50 p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">List Status</p>
          <p class="text-lg font-semibold text-green-600">Active</p>
        </div>

        <CircleCheckBig className="text-2xl text-green-600" />
      </div>
    </div>

    <div class="flex-1 rounded-lg bg-blue-50 p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Waiting Time</p>
          <p class="text-lg font-semibold text-blue-600">8 months</p>
        </div>

        <ClockAlert className="text-2xl text-blue-600" />
      </div>
    </div>

    <div class="flex-1 rounded-lg bg-purple-50 p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Position</p>
          <p class="text-lg font-semibold text-purple-600">#156</p>
        </div>

        <ListOrdered className="text-2xl text-purple-600" />
      </div>
    </div>
  </div>
</div>
