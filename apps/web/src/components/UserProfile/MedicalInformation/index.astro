---
import { bloodTypes } from '@/constants'
import type { GetPatientQuery } from '@/lib/apiClient'
import { format } from 'date-fns'

interface Props {
  patient: GetPatientQuery['patient']
}

const { patient } = Astro.props
---

<div
  id="medical-info"
  class="mb-8 rounded-xl bg-white p-6 shadow-sm"
>
  <h3 class="mb-4 text-xl font-semibold">Medical Information</h3>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    <div>
      <p class="mb-2 text-gray-600">Blood Type</p>
      <p class="text-lg font-semibold">{bloodTypes[patient.bloodType]}</p>
    </div>

    <div>
      <p class="mb-2 text-gray-600">Organ Needed</p>
      <p class="text-lg font-semibold">Kidney</p>
    </div>

    <div>
      <p class="mb-2 text-gray-600">Last Updated</p>
      <p class="text-lg font-semibold">
        {format(new Date(patient.updatedAt), 'P')}
      </p>
    </div>

    <div>
      <p class="mb-2 text-gray-600">Hospital</p>
      <p class="text-lg font-semibold">City General Hospital</p>
    </div>
  </div>
</div>
