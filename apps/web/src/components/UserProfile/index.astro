---
import { type GetPatientQuery } from '@/lib/apiClient'
import SideBar from './SideBar/index.astro'
import StatusBar from './StatusBar/index.astro'
import MedicalInformation from './MedicalInformation/index.astro'

interface Props {
  patient: GetPatientQuery['patient']
}

const { patient } = Astro.props
---

<section
  id="patient-dashboard"
  class="pb-20 pt-32"
>
  <div class="container mx-auto px-4">
    <div class="flex flex-col gap-8 md:flex-row">
      <SideBar patient={patient} />

      <div
        id="patient-main-content"
        class="md:w-3/4"
      >
        <StatusBar />
        <MedicalInformation patient={patient} />
      </div>
    </div>
  </div>
</section>
