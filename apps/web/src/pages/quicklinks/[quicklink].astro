---
import PageLayout from '@/layouts/containers/PageLayout.astro'
import SiteLayout from '@/layouts/SiteLayout.astro'

const { quicklink = 'Quicklink' } = Astro.params
const title = quicklink
  .split('-')
  .map((s) => s.charAt(0).toUpperCase() + s.slice(1))
  .join(' ')
---

<SiteLayout title={title}>
  <PageLayout title={title} />
</SiteLayout>
