---
import { OrgansTable } from '@/components/OrganList'
import PageLayout from '@/layouts/containers/PageLayout.astro'
import SiteLayout from '@/layouts/SiteLayout.astro'
import OrganListImage from '@/assets/body-with-organs.png'
---

<SiteLayout title="Organs List">
  <PageLayout
    title="Available Organs for Transplant"
    subtitle="Search and filter for organs"
    image={{
      src: OrganListImage,
      alt: 'Illustration of a person wearing a red shirt with heart and kidneys printed on it, symbolizing organ donation',
    }}
  >
    <OrgansTable client:only="react" />
  </PageLayout>
</SiteLayout>
