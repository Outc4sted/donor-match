---
import { DonorForm } from '@/components/donor-registration/DonorForm'
import SiteLayout from '@/layouts/SiteLayout.astro'
---

<SiteLayout title="Donor Registration">
  <section
    id="donor-registration"
    class="pb-20 pt-32"
  >
    <div class="container mx-auto px-4">
      <div class="mb-4 text-center">
        <h1 class="text-4xl font-bold text-gray-900">
          Organ Donor Registration
        </h1>

        <p class="mb-10 text-lg text-gray-600">
          Complete the form below to register as an organ donor. <br /> Your information
          will be kept confidential.
        </p>
      </div>

      <div class="mx-auto max-w-3xl">
        <DonorForm client:only="react" />
      </div>
    </div>
  </section>
</SiteLayout>
