---
import PageLayout from '@/layouts/containers/PageLayout.astro'
import SiteLayout from '@/layouts/SiteLayout.astro'

interface Props {
  title?: string
  subtitle?: string
  imageSrc?: string
  imageAlt?: string
}

const {
  title = '500',
  subtitle = 'Something went wrong on our end',
  imageSrc = '/500.png',
  imageAlt = 'Illustration of a medical worker standing beside a large, broken heart monitor surrounded by scattered medical equipment.',
} = Astro.props
---

<SiteLayout title="Server error">
  <PageLayout
    title={title}
    subtitle={subtitle}
    imageSrc={imageSrc}
    imageAlt={imageAlt}
  />
</SiteLayout>
