---
import PageLayout from '@/layouts/containers/PageLayout.astro'
import SiteLayout from '@/layouts/SiteLayout.astro'
import Image500 from '@/assets/500.png'
import type { ImageMetadata } from 'astro'

interface Props {
  title?: string
  subtitle?: string
  image?: {
    src: ImageMetadata
    alt: string
  }
}

const {
  title = '500',
  subtitle = 'Something went wrong on our end',
  image = {
    src: Image500,
    alt: 'Illustration of a medical worker standing beside a large, broken heart monitor surrounded by scattered medical equipment.',
  },
} = Astro.props
---

<SiteLayout title="Server error">
  <PageLayout
    title={title}
    subtitle={subtitle}
    image={{
      src: image.src,
      alt: image.alt,
    }}
  />
</SiteLayout>
