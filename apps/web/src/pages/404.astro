---
import PageLayout from '@/layouts/containers/PageLayout.astro'
import SiteLayout from '@/layouts/SiteLayout.astro'
import Image404 from '@/assets/404.png'
import type { ImageMetadata } from 'astro'

interface Props {
  title?: string
  subtitle?: string
  image?: {
    src: ImageMetadata
    alt: string
  }
}

const {
  title = '404',
  subtitle = 'This page does not exist!',
  image = {
    src: Image404,
    alt: 'Illustration of a confused doctor surrounded by health-related icons like a heart monitor and pills.',
  },
} = Astro.props
---

<SiteLayout title="Page not found">
  <PageLayout
    title={title}
    subtitle={subtitle}
    image={{
      src: image.src,
      alt: image.alt,
    }}
  />
</SiteLayout>
